{
  "function": {
    "recordVisit": {
      "service": "Lambda",
      "providerPlugin": "awscloudformation",
      "build": true,
      "dependsOn": [
        {
          "category": "storage",
          "resourceName": "visitsTable",
          "attributes": ["Name"]
        }
      ]
    },
    "getVisits": {
      "service": "Lambda",
      "providerPlugin": "awscloudformation",
      "build": true,
      "dependsOn": [
        {
          "category": "storage",
          "resourceName": "visitsTable",
          "attributes": ["Name"]
        }
      ]
    }
  },
  "storage": {
    "visitsTable": {
      "service": "DynamoDB",
      "providerPlugin": "awscloudformation",
      "dependsOn": []
    }
  },
  "api": {
    "visitorCounter": {
      "service": "API Gateway",
      "providerPlugin": "awscloudformation",
      "dependsOn": [
        {
          "category": "function",
          "resourceName": "recordVisit",
          "attributes": ["Name", "Arn"]
        },
        {
          "category": "function",
          "resourceName": "getVisits",
          "attributes": ["Name", "Arn"]
        }
      ]
    }
  }
}
